<h1>Parts</h1>

<table border="1">
  <tr>
    <th>Part Name</th>
    <th>Part Description</th>
    <th>Serialized</th>
    <th>Manufacturer</th>
    <th>Mfg Model</th>
    <th>Mfg Part Code</th>
    <th>Actions</th>
  </tr>

<% @parts.each do |part| %>
  <tr>
    <td><%= part.part_name %></td>
    <td><%= part.part_description %></td>
    <td><%= part.serialized %></td>
    <td><%= part.manufacturer %></td>
    <td><%= part.mfg_model %></td>
    <td><%= part.mfg_part_code %></td>
    <td><%= link_to 'Show', part %>
      <%= link_to 'Edit', edit_part_path(part) %>
      <%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Part', new_part_path %>

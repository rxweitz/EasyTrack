    <%= f.label :location_description %><br />
    <%= f.text_area :location_description %>
  </div>
  <div class="field">
    <%= f.label :location_type_id %><br />
    <%= f.select :location_type_id, LocationType.all(:order => "location_type").collect {|lt| [lt.location_type, lt.id]} %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :zip_code %><br />
    <%= f.text_field :zip_code %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
